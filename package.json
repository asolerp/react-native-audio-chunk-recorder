{
  "name": "@asolerp/react-native-audio-chunk-recorder",
  "version": "0.2.1",
  "description": "React Native audio recording with chunking support",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "install-local": "node install-local.js",
    "setup-project": "node setup-project.js",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "react-native",
    "audio",
    "recording",
    "chunks",
    "typescript"
  ],
  "author": "DocPlanner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asolerp/react-native-audio-chunk-recorder.git"
  },
  "homepage": "https://github.com/asolerp/react-native-audio-chunk-recorder#readme",
  "bugs": {
    "url": "https://github.com/asolerp/react-native-audio-chunk-recorder/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0 <20.0.0",
    "react-native": ">=0.60.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-native": {
      "optional": false
    }
  },
  "optionalDependencies": {
    "jotai": ">=1.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-native": "^0.73.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0"
  },
  "react-native": {
    "android": {
      "sourceDir": "./android",
      "packageImportPath": "import com.audiochunkrecorder.AudioChunkRecorderPackage;"
    }
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "!lib/**/__tests__/**",
    "!lib/**/*.test.*",
    "ios",
    "android",
    "scripts",
    "react-native-audio-chunk-recorder.podspec",
    ".npmrc",
    "README.md"
  ]
}
